<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.SecondPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#62C9A4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/general_sans_bold"
                android:text="How to use FloraCare"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/page1Iv"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_page2img"
                android:layout_marginTop="25dp" />

            <TextView
                android:id="@+id/disease_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/general_sans_medium"
                android:gravity="center|center_horizontal"
                android:padding="5dp"
                android:text="1 . Tap on Upload Image to upload from gallery or Take a picture from your device's camera.\n\n2 . After viewing the result you can look for more info about the device and its diseases."
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>