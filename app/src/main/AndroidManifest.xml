<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.anubhav.FloraCure">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FloraCure">
        <activity
            android:name="com.anubhav.Floracure.ui.activities.Splash"
            android:exported="true" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name="com.anubhav.Floracure.ui.activities.OnBoarding"
            android:exported="true"/>
        <activity
            android:name="com.anubhav.Floracure.ui.activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>